source 'https://github.com/CocoaPods/Specs.git'
project 'Example.xcodeproj'
platform :ios, '10.0'

# ignore all warnings from all pods
inhibit_all_warnings!

use_frameworks!

def shared_pods
    pod 'SwiftyBeaver', '1.4.2'
end

def ui_pods
    pod 'ReactiveCocoa', '7.2.0'
end

def dependency_pods
    pod 'SalemoveSDK', :path => '../'
    pod 'Socket.IO-Client-Swift', :git => 'https://github.com/socketio/socket.io-client-swift', :branch => '1.0-swift4'
    pod 'Starscream', '3.0.5'
    pod 'Macaw', '0.9.2'
end

target 'Example' do
    shared_pods
    dependency_pods
    ui_pods
end

post_install do |installer|
    installer.pods_project.targets.each do |target|
        if target.name == 'ReactiveCocoa'
            target.build_configurations.each do |config|
                config.build_settings['SWIFT_VERSION'] = '4.0'
            end
        end
    end
end

